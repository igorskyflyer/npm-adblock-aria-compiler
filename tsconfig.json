{
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules/**/*",
		"test/**/*"
	],
	"compilerOptions": {
		"target": "ES6",
		"declaration": true,
		"outDir": "./dist",
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declarationDir": "./dist",
		"moduleResolution": "node",
		"noEmitOnError": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true
	}
}
