{
	"include": [
		"lib/**/*",
		"bin/aria.mts"
	],
	"exclude": [
		"node_modules/**/*",
		"test/**/*"
	],
	"compilerOptions": {
		"target": "ES2022",
		"declaration": false,
		"outDir": "./dist",
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"noEmitOnError": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitAny": true,
		"allowSyntheticDefaultImports": true
	}
}
